{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": false,
    "esModuleInterop": true,
    "lib": ["dom", "es2015"],
    "module": "system",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "jsx": "react",
    "target": "es2015"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["dist", "node_modules"]
}
